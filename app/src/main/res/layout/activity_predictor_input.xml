<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.redfoxoptimaiii.farmaide.PredictorInputActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:navigationIcon="?attr/actionModeCloseDrawable"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="@string/input_values">

            <!--<TextView-->
            <!--android:id="@+id/profile_name"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="right"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:text="Profile"-->
            <!--android:textAppearance="@style/TextAppearance.AppCompat.Medium" />-->

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_add_recipe"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/appbar"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:id="@+id/signup_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/image_picker"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:weightSum="1">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="4">

                <TextView
                    android:id="@+id/days_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:maxLines="1"
                    android:text="@string/lactation_days"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/ld"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textAppearance="@android:style/TextAppearance.Material.Small.Inverse"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:text="days"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/fats_yield_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:maxLines="1"
                    android:text="@string/fats_yield"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/fy"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textAppearance="@android:style/TextAppearance.Material.Small.Inverse"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:text="kg"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/protein_yield_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:maxLines="1"
                    android:text="@string/protein_yield"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/py"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textAppearance="@android:style/TextAppearance.Material.Small.Inverse"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:text="kg"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tsy_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".4"
                    android:maxLines="1"
                    android:text="@string/total_solids_yield"
                    android:textAppearance="@android:style/TextAppearance.Material.Medium" />

                <EditText
                    android:id="@+id/tsy"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:inputType="numberDecimal"
                    android:textAlignment="center"
                    android:textAppearance="@android:style/TextAppearance.Material.Small.Inverse"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:text="kg"
                    android:textSize="16sp" />

            </GridLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button9"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="predict"
        android:text="@string/predict"
        android:layout_below="@+id/adj_r_squared"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/adj_r_squared"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/scrollView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

</RelativeLayout>
